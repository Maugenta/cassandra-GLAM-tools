{{#> mainWrapper}}
<style>
	.main-container {
		margin-inline-start: var(--sidebar-width);
		padding: 38px;
	}

	.header {
		margin-bottom: 30px;
		display: flex;
		justify-content: flex-end;
	}

	.cover {
		display: flex;
		justify-content: flex-end;
	}

	.glams-boxes {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		row-gap: 20px;
		column-gap: 20px;
	}

	.glam-container {
		border-radius: 8px;
		position: relative;
		overflow: hidden;
		height: 217px;
	}

	.glam-container>img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.text-block {
		position: absolute;
		bottom: 0;
		left: 0;
		text-align: center;
		color: white;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column-reverse;
		transition: all 0.6s;
		opacity: 1;
		background: linear-gradient(180deg,
				rgba(0, 0, 0, 0) 0%,
				rgba(0, 0, 0, 0) 50%,
				rgba(0, 0, 0, 0.5) 100%);
		padding: 0 1em;
	}

	.glam-link {
		color: inherit;
		text-decoration: none;
		font-size: 18px;
	}

	.glam-link::before {
		content: ' ';
		position: absolute;
		top: 0;
		left: 0;
		height: 100%;
		width: 100%;
	}

	.text-block>a>h4 {
		font-weight: 500;
		margin-bottom: 16px;
		text-align: left;
	}
</style>
<div class="pusher">
	{{> sidebar}}
	<main class="main-container">
		<div class="header">
			{{> langSelect}}
		</div>
		<div class="glams-boxes">
			{{#*inline "glamLink"}}
			<div class="glam-container">
				<img src="{{glam.image}}">
				<div class="text-block">
					<a class="glam-link" href="/{{glam.name}}" alt="{{glam.category}}">
						<h4>{{glam.fullname}}</h4>
					</a>
				</div>
			</div>
			{{/inline}}

			{{#each glams}}
			{{> glamLink glam=this}}
			{{/each}}
		</div>
	</main>
</div>
{{/mainWrapper}}