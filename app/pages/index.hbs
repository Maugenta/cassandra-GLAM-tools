{{#> mainWrapper}}
<div id="mobile-sidebar" class="ui left sidebar"></div>
<div class="pusher">
	<header id="mobile-header-bar"></header>
	{{> sidebar}}
	<section id="home-cover" class="cover">
		<div class="row">
			<div class="col-12 col-xl-7">
				<h2>{{ langDict.index.title }}</h2>
			</div>
		</div>
	</section>
	<main id="main-container">
		<section>
			<div class="row">
				{{#*inline "glamLink"}}
				<a href="/{{glam.name}}" alt="{{glam.category}}">
					<div class="glam-container">
						<img style="width:100%;" src="{{glam.image}}">
						<div class="text-block">
							<h4>{{glam.fullname}}</h4>
						</div>
					</div>
				</a>
				{{/inline}}

				{{#each glams}}
				{{> glamLink glam=this}}
				{{/each}}
			</div>
		</section>
	</main>
</div>
{{/mainWrapper}}